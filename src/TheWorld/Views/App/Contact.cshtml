@model TheWorld.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Contact</h2>

        <form method="post">
            <span asp-validation-summary="ModelOnly"></span>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div  class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" type="email" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div  class="form-group">
                <label asp-for="Message"></label>
                <textarea  class="form-control"cols="40" asp-for="Message" rows="4"></textarea>
                <span asp-validation-for="Message"></span>
            </div>
            <div>
                <a asp-controller="App" asp-action="Index" class="btn btn-default">Cancel</a>
                <input type="submit" value="Submit Message" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>


@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}